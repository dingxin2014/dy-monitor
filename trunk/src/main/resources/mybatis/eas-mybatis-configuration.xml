<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
    
<configuration>
	<settings>
		<setting name="lazyLoadingEnabled" value="false" />
		<setting name="logImpl" value="LOG4J"/>
	</settings>
	
	<typeAliases>
		<typeAlias alias="integer" type="java.lang.Integer"/>
		<typeAlias alias="string" type="java.lang.String"/>
		<typeAlias alias="bigdouble" type="java.math.BigDecimal"/>
		<typeAlias alias="long" type="java.lang.Long"/>
		<typeAlias alias="date" type="java.util.Date"/>
		
	</typeAliases>
	
    <!-- 配置插件 -->
    <plugins>
    	<!-- 配置拦截器插件 -->
		<plugin interceptor="com.github.miemiedev.mybatis.paginator.OffsetLimitInterceptor">
			<property name="dialectClass" value="com.github.miemiedev.mybatis.paginator.dialect.SQLServer2005Dialect" />
		<!-- 
			<property name="dialectClass" value="com.github.miemiedev.mybatis.paginator.dialect.MySQLDialect" />
			 -->
			<!-- 
			标记mybatis在分页查询时，可以异步查询，就是开启两个线程，一个线程执行list，一个线程执行count，
			这个会带来查询语句的事务不受spring管理，从而mybatis重新开启了一个事务和连接，如果在同一次操作中，
			如果有查询，也有数据修改操作，如果其中发生了异常，则事务不会回滚，不知是否是spring4的bug还是mybatis的bug，
			声明为false，同步操作就不会出现这中问题。
			 -->
			<property name="asyncTotalCount" value="false"/> 
		</plugin>
<!-- 		<plugin interceptor="com.dooioo.util.mybatis.BatchUpdateForbiddenPlugin"></plugin> -->
<!-- 		<plugin interceptor="com.dooioo.util.mybatis.DeleteForbiddenPlugin"></plugin> -->
    </plugins>  
</configuration>